<!DOCTYPE html>

{% block html_tag %}
<html xmlns="http://www.w3.org/1999/xhtml" lang="{{ app.request.locale }}">
{% endblock html_tag %}

{% block head %}
    <head>
        <meta charset="UTF-8" />
        {% block head_style %}
        {% endblock head_style %}

        {% block additional_style_assetic %}
        {% endblock additional_style_assetic %}

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block head_script %}
        {% endblock head_script %}

        <title>{% block title %}{% endblock title %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block head_bottom %}
        {% endblock head_bottom %}
    </head>
{% endblock head %}

{% block body_tag %}
<body>
{% endblock body_tag %}

{% block body_start %}
{% endblock body_start %}

{% block body %}
    {% block container %}
        <main class="wrap push">

            {% block header %}
            {% endblock header %}

            {% block breadcrumbs %}
            {% endblock breadcrumbs %}
            <main class="main-content">
                {% block content %}{% endblock content %}
            </main>

            {% block footer %}
            {% endblock footer %}

        </main>
    {% endblock container %}

    {% block foot_script %}
        {% block foot_script_assetic %}
        {% endblock foot_script_assetic %}

        {% block additional_script_assetic %}
        {% endblock additional_script_assetic %}
    {% endblock foot_script %}

    {% block additional_script %}
    {% endblock %}
{% endblock body %}

{% block body_end %}
{% endblock body_end %}
</body>
</html>
